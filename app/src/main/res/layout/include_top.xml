<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/top_layout"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.yanzhenjie.sofia.StatusView
        android:id="@+id/status_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="top"
        android:background="@color/white"
        android:theme="@style/AppTheme.AppBarLight"
        app:navigationIcon="@mipmap/close"
        app:popupTheme="@style/AppTheme.Popup"
        app:subtitleTextColor="@color/black_484848"
        app:titleTextColor="@color/black_484848">

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="8"
            android:textColor="@color/black_484848"
            android:textSize="19sp" />

        <FrameLayout
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:id="@+id/top_right_fy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right" >

            <TextView
                android:id="@+id/top_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/tab_unselect"
                android:textSize="12sp" />

            <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@mipmap/y22"
                android:id="@+id/top_iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <View
        style="@style/divider_dropshadow"
        android:id="@+id/top_view"/>

</LinearLayout>
