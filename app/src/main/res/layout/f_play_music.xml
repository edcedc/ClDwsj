<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:paddingTop="@dimen/px50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fy_close"
                android:padding="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@mipmap/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_dot1"
                    android:layout_gravity="center"
                    android:background="@mipmap/icon_fy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/iv_dot2"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_gravity="center"
                    android:background="@mipmap/icon_fy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </FrameLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


        <com.d1540173108.hrz.weight.NoScrollViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/music_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingRight="@dimen/px20"
            android:paddingLeft="@dimen/px20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_start_time"
                android:text="00:00"
                android:layout_weight="1"
                style="@style/Tv12gray" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_end_time"
                android:text="00:00"
                style="@style/Tv12gray" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_gravity="center"
            style="@style/Tv15black"
            android:layout_marginTop="@dimen/px50"
            android:textSize="@dimen/size40" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_nick"
            android:visibility="gone"
            android:layout_marginTop="@dimen/px10"
            android:layout_gravity="center"
            style="@style/Tv12gray" />

        <LinearLayout
            android:layout_marginTop="@dimen/px30"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fy_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px20">

                <ImageView
                    android:id="@+id/cb_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_sc0"
                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/iv_download"
                android:layout_marginLeft="@dimen/px110"
                android:layout_marginRight="@dimen/px110"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px20">

                <ImageView
                    android:background="@mipmap/icon_xz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px20">

                <ImageView
                    android:background="@mipmap/y29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/px50"
            android:layout_marginTop="@dimen/px30"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/fy_play_type"
                android:padding="@dimen/px20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_play_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_sx" />

            </FrameLayout>

        <FrameLayout
            android:id="@+id/iv_shang"
            android:layout_marginLeft="@dimen/px30"
            android:padding="@dimen/px20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/y30" />

        </FrameLayout>

            <FrameLayout
                android:layout_marginLeft="@dimen/px100"
                android:layout_marginRight="@dimen/px100"
                android:id="@+id/fy_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px20">


                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:background="@mipmap/icon_tz" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/iv_xia"
                android:layout_marginRight="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px20">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_xys" />

            </FrameLayout>

           <FrameLayout
               android:id="@+id/iv_list"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="@dimen/px20">

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@mipmap/icon_lb" />

           </FrameLayout>



        </LinearLayout>


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
</layout>