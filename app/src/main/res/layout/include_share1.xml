<?xml version="1.0" encoding="utf-8"?>


    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ly_share1"
        android:layout_height="match_parent"
        android:background="@mipmap/icon_beijing1"
        android:orientation="vertical"
        android:padding="@dimen/px20">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_img1"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/place_holder" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/px40"
                android:background="@mipmap/icon_youchuo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="@mipmap/y33" />

        </FrameLayout>

    <com.flyco.roundview.RoundTextView
        style="@style/Tv12gray"
        android:text="动物识别为"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:ems="5"
        android:gravity="center"
        android:textColor="@color/white"
        app:rv_backgroundColor="@color/tab_gray" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name1"
        style="@style/Tv15black"
        android:layout_marginBottom="@dimen/px10"
        android:layout_marginTop="@dimen/px10"
        android:textSize="@dimen/size48" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_content1"
        style="@style/Tv12gray" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@mipmap/icon_logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/Tv12gray"
            android:layout_gravity="bottom"
            android:text="@string/shibie_zking"/>

        <FrameLayout
            android:layout_marginLeft="@dimen/px20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/white_f4f4f4">

            <ImageView
                android:layout_gravity="center"

                android:id="@+id/iv_zking1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px5"
                android:scaleType="fitXY"  />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>


